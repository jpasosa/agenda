{% extends 'AgendaBackendBundle:Back:base.html.twig' %}

{% block login %}
<script type="text/javascript">
    $(document).ready(function(){
        $(document).pngFix( );
    });
</script>

{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div id="login-bg"> 
        <div id="login-holder">
            <div id="logo-login"> </div>
            <div class="clear">   </div>
            <div id="loginbox">
                <div id="login-inner">
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                            <th>
                                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                            </th>
                            <td>
                                <input type="text" id="username" class="login-inp" name="_username" value="{{ last_username }}" required="required" />
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            </th>
                            <td>
                                <input type="password" class="login-inp" id="password" name="_password" required="required" />
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                            </th>
                            <td valign="top">
                                <input type="checkbox" class="checkbox-size" id="login-check" name="_remember_me" value="on" />
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <input type="submit" id="_submit"  class="submit-login" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="clear"> </div>
                <a href="" class="forgot-pwd">Forgot Password?</a>
            </div>
            <div id="forgotbox">
                <div id="forgotbox-text">Please send us your email and we'll reset your password.</div>
                <div id="forgot-inner">
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                            <th>Email address:</th>
                            <td><input type="text" value=""   class="login-inp" /></td>
                        </tr>
                        <tr>
                            <th> </th>
                            <td><input type="button" class="submit-login"  /></td>
                        </tr>
                    </table>
                </div>
                <div class="clear"></div>
                <a href="" class="back-login">Back to login</a>
            </div>
        </div>
    </div>
</form>

{% endblock login %}

